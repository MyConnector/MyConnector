#!/usr/bin/python3

import os, sys, subprocess
sys.path.append('/usr/share/connector')
os.chdir('/usr/share/connector')
import gui
PIDs = subprocess.check_output("pgrep connector",shell=True, universal_newlines=True).strip().split()
if len(PIDs) == 1 or len(sys.argv) > 1:
    gui.f_main()
else:
    window = subprocess.check_output("xdotool search --pid " + PIDs[0] + " 2> /dev/null | tail -n1",shell=True, universal_newlines=True).strip()
    os.system("xdotool windowactivate " + window)
